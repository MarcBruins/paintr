{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*",
      "!node_modules",
      "!.next",
      "!src/lib/db/schema/auth.ts"
    ]
  },
  "css": {
    "parser": {
      "cssModules": false,
      "allowWrongLineComments": false,
      "tailwindDirectives": true
    },
    "linter": {
      "enabled": false
    },
    "formatter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
